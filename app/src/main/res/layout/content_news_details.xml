<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nsv_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="memsa.ahmed.news.Activities.NewsDetailsActivity"
    tools:showIn="@layout/activity_news_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryLight"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/colorPrimaryDark"
            android:padding="16dp"

            android:textColor="#fff"
            android:textSize="28dp"
            tools:text="news titile two ahmed aaa ndjf kodk kfpk kopfk" />


        <TextView
            android:id="@+id/tv_article_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="Date" />

        <TextView
            android:id="@+id/tv_article_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="large_text"
            android:textSize="22sp" />


        <LinearLayout
            android:id="@+id/ll_open_in_browser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:background="@drawable/xml_selector_trans_accent"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/tv_item_source_browser"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:contentDescription="@string/open_in_browser_icon"
                android:foreground="@drawable/xml_selector_trans_accent"
                android:paddingBottom="6dp"
                android:paddingEnd="6dp"
                android:paddingStart="6dp"
                android:paddingTop="6dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_open_in_browser_56dp" />

            <TextView
                android:id="@+id/tv_item_source_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:ellipsize="end"
                android:lines="1"
                android:padding="4dp"
                android:text="@string/open_in_browser"
                android:textColor="@color/colorBlack"
                android:textSize="24dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
