<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_item_parent"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:foreground="@drawable/xml_selector_trans_accent">

        <ImageView
            android:id="@+id/iv_item_article_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_logo"
            android:minWidth="200dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_news_logo_white" />


        <TextView
            android:id="@+id/tv_item_article_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_item_article_image"
            android:layout_alignEnd="@+id/iv_item_article_image"
            android:layout_alignStart="@+id/iv_item_article_image"
            android:background="#b4000000"
            android:ellipsize="end"
            android:lines="2"
            android:padding="4dp"
            android:text="news titile two ahmed aaa ndjf kodk kfpk kopfk"
            android:textColor="#fff"
            android:textSize="24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>